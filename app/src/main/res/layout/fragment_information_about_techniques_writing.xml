<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="380dp"
    android:layout_height="wrap_content"
    tools:context=".infoPanel.InformationAboutTechniquesWriting">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/radioBreakfast"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:checked="true"
            android:background="@drawable/radio_button_selector"
            android:button="@null"
            android:elevation="2dp"
            android:gravity="center"
            android:text="Завтрак"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:textColor="#354159" />

        <RadioButton
            android:id="@+id/radioLunch"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:background="@drawable/radio_button_selector"
            android:button="@null"
            android:elevation="2dp"
            android:gravity="center"
            android:text="Обед"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:textColor="#354159" />

        <RadioButton
            android:id="@+id/radioDinner"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:background="@drawable/radio_button_selector"
            android:button="@null"
            android:elevation="2dp"
            android:gravity="center"
            android:text="Ужин"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:textColor="#354159" />

        <RadioButton
            android:id="@+id/radioSnack"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:background="@drawable/radio_button_selector"
            android:button="@null"
            android:elevation="2dp"
            android:gravity="center"
            android:text="Закуска"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:textColor="#354159" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="20dp"
        android:text="@string/Calories"
        android:textAppearance="@style/some_id_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <TextView
        android:id="@+id/caloriesZnach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="12dp"
        android:text="0/0 ккал"
        android:textAppearance="@style/some_id_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="245dp"
        android:layout_height="3dp"
        android:layout_marginTop="6dp"
        android:indeterminateOnly="false"
        android:progressDrawable="@drawable/line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="16dp"
        android:text="@string/belki"
        android:textAppearance="@style/some_id_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar1" />

    <TextView
        android:id="@+id/carbohydratesZnach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="16dp"
        android:text="0/0 г"
        android:textAppearance="@style/some_id_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar1" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="245dp"
        android:layout_height="3dp"
        android:layout_marginTop="6dp"
        android:indeterminateOnly="false"
        android:progressDrawable="@drawable/line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="16dp"
        android:text="@string/ygkevod"
        android:textAppearance="@style/some_id_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar2" />

    <TextView
        android:id="@+id/proteinZnach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="16dp"
        android:text="0/0 г"
        android:textAppearance="@style/some_id_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar2" />

    <ProgressBar
        android:id="@+id/progressBar3"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="245dp"
        android:layout_height="3dp"
        android:layout_marginTop="6dp"
        android:indeterminateOnly="false"
        android:progressDrawable="@drawable/line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="16dp"
        android:text="@string/giri"
        android:textAppearance="@style/some_id_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar3" />

    <TextView
        android:id="@+id/fatsZnach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="16dp"
        android:text="0/0 г"
        android:textAppearance="@style/some_id_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar3" />

    <ProgressBar
        android:id="@+id/progressBar4"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="245dp"
        android:layout_height="3dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="22dp"
        android:indeterminateOnly="false"
        android:progressDrawable="@drawable/line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>