<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".settings.SettingsNotificationsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        app:titleTextColor="@color/actionBarColor"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notifications"
            android:textColor="@color/actionBarColor"
            android:textSize="17sp"/>

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:layout_marginTop="20dp"
        android:padding="10dp">

        <Switch
            android:id="@+id/switch1"
            android:layout_width="391dp"
            android:layout_height="wrap_content"
            android:text="@string/food_intake"
            android:textAppearance="@style/some_id_3"
/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtTitle2"
            android:text="@string/Breakfast"
            android:textAppearance="@style/some_id_3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtDescriptor2"
            android:text="@string/vvod"
            android:textAppearance="@style/gray_letters_2"
            android:layout_below="@id/txtTitle2"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtTitle3"
            android:text="@string/Lunch"
            android:textAppearance="@style/some_id_3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtDescriptor3"
            android:text="@string/vvod"
            android:textAppearance="@style/gray_letters_2"
            android:layout_below="@id/txtTitle3"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtTitle4"
            android:text="@string/Dinner"
            android:textAppearance="@style/some_id_3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtDescriptor4"
            android:text="@string/vvod"
            android:textAppearance="@style/gray_letters_2"
            android:layout_below="@id/txtTitle4"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtTitle5"
            android:text="@string/goal_week"
            android:textAppearance="@style/some_id_3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtDescriptor5"
            android:text="@string/vvod"
            android:textAppearance="@style/gray_letters_2"
            android:layout_below="@id/txtTitle5"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtTitle6"
            android:text="@string/Snack"
            android:textAppearance="@style/some_id_3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtDescriptor6"
            android:text="@string/vvod"
            android:textAppearance="@style/gray_letters_2"
            android:layout_below="@id/txtTitle6"/>

    </RelativeLayout>


    <View
        android:id="@+id/divider"
        android:layout_width="380dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="?android:attr/listDivider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:padding="10dp">

        <Switch
            android:id="@+id/switch2"
            android:layout_width="391dp"
            android:layout_height="wrap_content"
            android:text="@string/water"
            android:textAppearance="@style/some_id_3" />

    </RelativeLayout>

    <View
        android:id="@+id/divider1"
        android:layout_width="380dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="?android:attr/listDivider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:padding="10dp">

        <Switch
            android:id="@+id/switch3"
            android:layout_width="391dp"
            android:layout_height="wrap_content"
            android:text="@string/food_intake"
            android:textAppearance="@style/some_id_3" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtTitle7"
            android:text="@string/day_week"
            android:textAppearance="@style/some_id_3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtDescriptor7"
            android:text="@string/vvod"
            android:textAppearance="@style/gray_letters_2"
            android:layout_below="@id/txtTitle7"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtTitle8"
            android:text="@string/time"
            android:textAppearance="@style/some_id_3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtDescriptor8"
            android:text="@string/vvod"
            android:textAppearance="@style/gray_letters_2"
            android:layout_below="@id/txtTitle8"/>

    </RelativeLayout>

</LinearLayout>