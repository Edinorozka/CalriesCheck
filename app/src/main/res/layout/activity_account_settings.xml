<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".settings.AccountSettingsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        app:titleTextColor="@color/actionBarColor"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account"
            android:textColor="@color/actionBarColor"
            android:textSize="17sp"/>

    </androidx.appcompat.widget.Toolbar>

    <fragment
        android:id="@+id/save_profile"
        android:layout_width="380dp"
        android:layout_height="106dp"
        android:name="com.example.caloriescheck.settings.AccountFragment"
        tools:layout="@layout/fragment_account2"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:layout_gravity="center_horizontal"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtTitle1"
            android:text="@string/Id_person"
            android:textAppearance="@style/some_id_3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtDescriptor1"
            android:text="6546f654gs4g6897"
            android:textAppearance="@style/gray_letters_2"
            android:layout_below="@id/txtTitle1"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation = "horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/txtTitle2"
            android:layout_width="360dp"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text="@string/subscription"
            android:textAppearance="@style/some_id_3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation = "horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/txtTitle3"
            android:layout_width="360dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:text="@string/Throw_off"
            android:textAppearance="@style/some_id_3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation = "horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/txtTitle4"
            android:layout_width="360dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:text="@string/exit"
            android:textAppearance="@style/some_id_3" />
    </LinearLayout>

</LinearLayout>